!!! 5
html(lang="en")
  head
    meta(charset="utf-8")
    title #{title}
    link(rel="stylesheet", href="/stylesheets/style.css")
    script(src='/socket.io/socket.io.js')
    script(src='/javascripts/jquery-1.6.4.min.js', type='text/javascript') 
    script(src='/javascripts/jquery.validate.min.js', type='text/javascript') 
    - if (typeof localScript === "string") 
      script(src='/javascripts/#{localScript}', type='text/javascript') 
    - if (typeof localScripts === "string") 
      script #{localScripts}
    | <!--[if lt IE 9]
    script(src="http://html5shiv.googlecode.com/svn/trunk/html5.js")
    | <![endif]-->
    script
      var socket = io.connect();
      socket.on('newPost', function (data) {
        postLink = ' <a href="/post/' + data._id + '">' + data.title + '</a>';
        $('#recentPosts').prepend($('<p>').append(postLink));
      });
  body
    header
      nav
        ul
          li
            a(href="/") Home
          li
            a(href="/posts") Posts
          li
            a(href="/users") Users
          li
            a(href="/about") About
          -if (loggedInUser.is_admin)
            li
              a(href="/admin") Admin
      != partial('login');
    section#content!= body
    section#sidebar
      - if (lastFivePosts)
        #recentPosts
          - each post in lastFivePosts 
            p 
              a(href="/post/#{post._id}") #{post.title}
    footer
      p 2011 Bodeutsch Inc. No rights reserved 
    
